<UserControl x:Class="Proof.DevEnv.Components.Utility.Vector2Component"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proof.DevEnv.Components.Utility"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="True" Grid.Column="0">
            <TextBlock Margin="0, 0, 5, 0"><Bold>X: </Bold></TextBlock>
            <TextBox x:Name="XValue" HorizontalAlignment="Stretch" LostFocus="Value_LostFocus" PreviewTextInput="TextBox_PreviewTextInput" />
        </DockPanel>
        <DockPanel LastChildFill="True" Grid.Column="1">
            <TextBlock Margin="0, 0, 5, 0"><Bold>Y: </Bold></TextBlock>
            <TextBox x:Name="YValue" HorizontalAlignment="Stretch" LostFocus="Value_LostFocus" PreviewTextInput="TextBox_PreviewTextInput" />
        </DockPanel>
    </Grid>
</UserControl>
