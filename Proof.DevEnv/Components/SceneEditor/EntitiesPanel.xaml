<UserControl x:Class="Proof.DevEnv.Components.EntitiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proof.DevEnv.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom">
            <TextBox x:Name="NewEntityNameBox" KeyDown="NewEntityNameBox_KeyDown" />
            <Button Content="Add" Click="Button_Click" />
        </StackPanel>
        <StackPanel x:Name="Body" DockPanel.Dock="Top" />
    </DockPanel>
</UserControl>
