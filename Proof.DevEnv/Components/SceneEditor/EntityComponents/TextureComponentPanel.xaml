<UserControl x:Class="Proof.DevEnv.Components.EntityComponents.TextureComponentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proof.DevEnv.Components.EntityComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander Header="Texture Component" IsExpanded="True">
        <StackPanel>
            <DockPanel LastChildFill="True" Grid.Column="0">
                <TextBlock Margin="0, 0, 5, 0"><Bold>Script: </Bold></TextBlock>
                <TextBox x:Name="TexturePath" HorizontalAlignment="Stretch" LostKeyboardFocus="TexturePath_LostKeyboardFocus" />
            </DockPanel>
            <Button x:Name="Remove" Content="Remove" Click="Remove_Click" />
        </StackPanel>
    </Expander>
</UserControl>
