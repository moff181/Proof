<UserControl x:Class="Proof.DevEnv.Components.Toolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proof.DevEnv.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="File">
                <MenuItem x:Name="Save" Header="Save" Click="Save_Click" />
                <MenuItem x:Name="SaveAs" Header="Save As" Click="SaveAs_Click" />
            </MenuItem>
            <MenuItem Header="Build">
                <MenuItem x:Name="Run" Header="Run" Click="Run_Click" />
                <MenuItem x:Name="Build" Header="Build" Click="Build_Click" />
                <MenuItem x:Name="BuildDependencies" Header="Build Dependencies" Click="BuildDependencies_Click" />
            </MenuItem>
        </Menu>
    </StackPanel>
</UserControl>
