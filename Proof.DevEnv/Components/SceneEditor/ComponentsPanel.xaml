<UserControl x:Class="Proof.DevEnv.Components.ComponentsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proof.DevEnv.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel LastChildFill="True">
        <Button x:Name="Remove" Content="Remove" DockPanel.Dock="Bottom" Click="Remove_Click" />
        <Button x:Name="AddComponent" Content="Add Component" DockPanel.Dock="Bottom" Click="AddComponent_Click" />
        <ComboBox DockPanel.Dock="Bottom" x:Name="NewComponentList">
            <ComboBoxItem>Audio Component</ComboBoxItem>
            <ComboBoxItem>Camera Component</ComboBoxItem>
            <ComboBoxItem>Colour Component</ComboBoxItem>
            <ComboBoxItem>Renderable Component</ComboBoxItem>
            <ComboBoxItem>Script Component</ComboBoxItem>
            <ComboBoxItem>Texture Component</ComboBoxItem>
            <ComboBoxItem>Transform Component</ComboBoxItem>
        </ComboBox>
        <StackPanel x:Name="Body" DockPanel.Dock="Top" />
    </DockPanel>
</UserControl>
