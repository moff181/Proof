<UserControl x:Class="Proof.DevEnv.Components.EntityComponents.TransformComponentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proof.DevEnv.Components.EntityComponents" xmlns:utility="clr-namespace:Proof.DevEnv.Components.Utility"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander Header="Transform Component" IsExpanded="True">
        <StackPanel x:Name="Body">
            <TextBlock><Bold>Position</Bold></TextBlock>
            <utility:Vector2Component OnChange="PositionChange" x:Name="Position" />
            <TextBlock><Bold>Scale</Bold></TextBlock>
            <utility:Vector2Component OnChange="ScaleChange" x:Name="Scale" />
        </StackPanel>
    </Expander>
</UserControl>
