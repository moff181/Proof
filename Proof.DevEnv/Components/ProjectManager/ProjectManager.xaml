<UserControl x:Class="Proof.DevEnv.Components.ProjectManager.ProjectManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proof.DevEnv.Components.ProjectManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <DockPanel>
            <Button Content="Select folder" x:Name="SelectFolder"  DockPanel.Dock="Right" Click="SelectFolder_Click" />
            <TextBlock Text="Containing Folder: " FontWeight="Bold" DockPanel.Dock="Left"/>
            <TextBox x:Name="ContainingFolderText" />
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Project Name: " FontWeight="Bold"  DockPanel.Dock="Left"/>
            <TextBox x:Name="ProjectNameText" />
        </DockPanel>
        <Button Content="Create New Project" x:Name="CreateNewProject" Click="CreateNewProject_Click" />
        <Button Content="Open Project" x:Name="OpenProject" Click="OpenProject_Click" />        
    </StackPanel>
</UserControl>
